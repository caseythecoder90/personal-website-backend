				{
					"name": "Create Project",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Personal Website Portfolio\",\n  \"shortDescription\": \"Full-stack personal website showcasing projects and technical skills\",\n  \"fullDescription\": \"A comprehensive personal portfolio website built with enterprise-grade patterns. Features project management, blog, and contact form. Built with Spring Boot, React, and PostgreSQL.\",\n  \"type\": \"PERSONAL\",\n  \"status\": \"IN_PROGRESS\",\n  \"difficultyLevel\": \"ADVANCED\",\n  \"githubUrl\": \"https://github.com/caseyquinn/personal-website\",\n  \"demoUrl\": \"https://caseyquinn.com\",\n  \"documentationUrl\": \"https://docs.caseyquinn.com\",\n  \"startDate\": \"2024-01-01T00:00:00\",\n  \"published\": true,\n  \"featured\": true,\n  \"displayOrder\": 1\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/projects",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"projects"
							]
						},
						"description": "Create a new project. `name` and `shortDescription` are required. `type` is required (PERSONAL, PROFESSIONAL, OPEN_SOURCE, LEARNING, FREELANCE). Slug is auto-generated from name if omitted. To associate technologies, provide `technologyIds` once technologies exist."
					},
					"response": []
				},
				{
					"name": "Update Project",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Personal Website Portfolio\",\n  \"shortDescription\": \"Full-stack portfolio site — now with blog and contact form\",\n  \"fullDescription\": \"Updated full description reflecting the current state of the project.\",\n  \"type\": \"PERSONAL\",\n  \"status\": \"MAINTAINED\",\n  \"difficultyLevel\": \"ADVANCED\",\n  \"githubUrl\": \"https://github.com/caseyquinn/personal-website\",\n  \"demoUrl\": \"https://caseyquinn.com\",\n  \"published\": true,\n  \"featured\": true,\n  \"displayOrder\": 1\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/projects/{{projectId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"projects",
								"{{projectId}}"
							]
						},
						"description": "Update an existing project. Same required fields as create. Published projects cannot be deleted — archive them instead."
					},
					"response": []
				},
				{
					"name": "Delete Project",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/projects/{{projectId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"projects",
								"{{projectId}}"
							]
						},
						"description": "Delete a project by ID. Published projects cannot be deleted — set status to ARCHIVED first."
					},
					"response": []
				},
				{
					"name": "Get Projects by Technology",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/projects/technology/{{technology}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"projects",
								"technology",
								"{{technology}}"
							]
						},
						"description": "Filter projects by technology name. Case-insensitive search. Update the `technology` collection variable to change the filter value."
					},
					"response": []
				}
			],
			"description": "Project portfolio management"
